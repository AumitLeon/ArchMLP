{
  "name": "arch-mlp",
  "version": "0.1.0",
  "private": true,
  "description": "Machine learning platform",
  "engines": {
    "node": "10.16.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run watch --prefix server\" \"npm start --prefix client\"",
    "setup:local": "yarn install && yarn --cwd client/ install && yarn --cwd server/ install",
    "heroku-postbuild": "npm install --prefix client && npm install --only=dev --no-shrinkwrap --prefix client && npm run build --prefix client && npm install --prefix server"
  },
  "cacheDirectories": [
    "client/node_modules",
    "server/node_modules"
  ],
  "keywords": [],
  "contributors": [
    "Aumit Leon <aumitleon@gmail.edu>"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@semantic-release/git": "^7.0.18",
    "@semantic-release/npm": "^5.3.4",
    "concurrently": "^4.1.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{client/src,server}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*.{js,css}",
            "docs",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
